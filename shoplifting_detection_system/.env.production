# Production Environment Configuration
# Shoplifting Detection System

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
DEBUG=false
LOG_LEVEL=info
DEMO_MODE=false
WORKERS=4

# ============================================================================
# API SETTINGS
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8080
APP_PORT=8080

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
POSTGRES_DB=shoplifter_db
POSTGRES_USER=shoplifter_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# ============================================================================
# REDIS SETTINGS
# ============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ============================================================================
# WEB SERVER SETTINGS
# ============================================================================
HTTP_PORT=80
HTTPS_PORT=443

# ============================================================================
# MONITORING SETTINGS (Optional)
# ============================================================================
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# ============================================================================
# NOTIFICATION SETTINGS (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=your_email@gmail.com

# Twilio (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# ============================================================================
# BACKUP SETTINGS (Optional)
# ============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_BUCKET_NAME=your_s3_bucket_name_here
AWS_REGION=us-east-1

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
MAX_CAMERA_FEEDS=4
DETECTION_INTERVAL=1.0
ALERT_COOLDOWN=30
MAX_EVIDENCE_FILES=1000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_FACE_DETECTION=true
ENABLE_BODY_DETECTION=true
ENABLE_MOTION_DETECTION=false
ENABLE_EDGE_DETECTION=false
ENABLE_SHOPLIFTING_DETECTION=true
ENABLE_NOTIFICATIONS=true
ENABLE_EVIDENCE_STORAGE=true
